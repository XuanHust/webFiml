<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Film</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container" style="margin-top: 50px; max-width: 98%; margin-bottom: 50px;">

    <div class="card" style="width: 100%;">
        <div class="card-header" style="width: 100%;">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Film</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/film/add">Add Film</a>
                </li>
            </ul>
        </div>

        <div class="card-body" style="max-width: 100%;">
            <% if(data.length) { %>
                <table class="table" style="max-width: 100%; table-layout: fixed; word-wrap:normal;">
                    <thead style="max-width: 100%;">
                        <tr>
                            <th scope="col" style=" overflow: hidden; vertical-align: middle; text-align: center;">#</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Id</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Name</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Origin Name</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Content</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Type</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Status</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Thumb Url</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Time</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Espisode Current</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Espisode Total</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Quality</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Lang</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Slug</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Year</th>
                            <th scope="col" style="overflow: hidden; vertical-align: middle; text-align: center;">Country</th>
                            <th style="vertical-align: middle;">Action</th>
                        </tr>
                    </thead>
                    <tbody style="max-width: 100%;">
                        <% for(var i=0; i< data.length; i++) { %>
                            <tr>
                                <th scope="row" style=" overflow: scroll; vertical-align: middle; text-align: center;">
                                    <%= (i+1) %>
                                </th>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].id%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].name%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].origin_name%>
                                </td>
                                <td
                                    style="overflow-x: scroll; height: 300px; width: 90px; display: contents; display: block;">
                                    <%= data[i].content%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].type%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].status%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].thumb_url%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].time%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].episode_current%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].episode_total%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].quality%>
                                </td>
                                <td style="overflow: scroll;  vertical-align: middle;">
                                    <%= data[i].lang%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].slug%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].year%>
                                </td>
                                <td style="overflow: scroll; vertical-align: middle;">
                                    <%= data[i].country%>
                                </td>
                                <td style=" vertical-align: middle; width: 100px;">
                                    <p style="width: 70px; display: flex; flex-direction: column;">
                                        <a class="btn btn-success edit" style=" margin-bottom: 10px"
                                            href="../film/edit/<%= data[i].id %>">Edit</a>
                                        <a class="btn btn-danger delete" onclick="return alert('Are You sure?')"
                                            href="../film/delete/<%= data[i].id %>">Delete</a>
                                    </p>

                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <% } %>

                    <!-- if result is empty -->
                    <% if(!data.length) { %>
                        <p class="text-center">No user found!</p>
                        <% } %>

        </div>
    </div>

</body>

</html>